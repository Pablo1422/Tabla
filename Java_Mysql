    void listar() {
        String sql = "select * from datos";
        try {
            con = cn.getConnection();
            st = con.createStatement();
            rs = st.executeQuery(sql);
            Object[] datos = new Object[12];
//            String[] Titulos={"ID","DNI","NOMBRES"};         
//            model=new DefaultTableModel(null,Titulos);   
            model = (DefaultTableModel) TablaDatos.getModel();
            while (rs.next()) {
                datos[0] = rs.getInt("Id");
                datos[1] = rs.getString("Nombre");
                datos[2] = rs.getString("Apellidos");
                datos[3] = rs.getString("Edad");
                datos[4] = rs.getString("Telefono");
                datos[5] = rs.getString("Email");
                datos[6] = rs.getString("Carrera");
                datos[7] = rs.getString("Matricula");
                datos[8] = rs.getString("Puesto");
                datos[9] = rs.getString("Grupo");
                datos[10] = rs.getString("Plantel");
                datos[11] = rs.getString("Celular");
                model.addRow(datos);
            }
            TablaDatos.setModel(model);

        } catch (Exception e) {
        }

    }

    void Agregar() {
        String Nombre = txtNombre.getText();
        String Apellidos = txtApellidos.getText();
        String Edad = txtEdad.getText();
        String Telefono = txtTelefono.getText();
        String Email = txtEmail.getText();
        String Carrera = txtCarrera.getText();
        String Matricula = txtMatricula.getText();
        String Puesto = txtPuesto.getText();
        String Grupo = txtGrupo1.getText();
        String Plantel = txtPlantel.getText();
        String Celular = txtCelular.getText();
        try {
            if (Nombre.equals("") || Apellidos.equals("") || Edad.equals("") || Telefono.equals("") || Email.equals("") || Carrera.equals("") || Matricula.equals("") || Puesto.equals("") || Grupo.equals("") || Plantel.equals("") || Celular.equals("")) {
                JOptionPane.showMessageDialog(null, "Debe Ingresar Datos");
                limpiarTabla(model);               
            } else {
                String sql = "insert into datos(Nombre,Apellidos,Edad,Telefono,Email,Carrera,Matricula,Puesto,Grupo,Plantel,Celular) values('" + Nombre + "','" + Apellidos + "','"+Edad+"','"+Telefono+"','"+Email+"','"+Carrera+"','"+Matricula+"','"+Puesto+"','"+Grupo+"','"+Plantel+"','"+Celular+"')";
                con = cn.getConnection();
                st = con.createStatement();
                st.executeUpdate(sql);
                JOptionPane.showMessageDialog(null, "Usuario Registrado con Exito");
                limpiarTabla(model);
                
            }

        } catch (Exception e) {
        }
        
        
    }

    void Modificar() {
        String Nombre = txtNombre.getText();
        String Apellidos = txtApellidos.getText();
        String Edad = txtEdad.getText();
        String Telefono = txtTelefono.getText();
        String Email = txtEmail.getText();
        String Carrera = txtCarrera.getText();
        String Matricula = txtMatricula.getText();
        String Puesto = txtPuesto.getText();
        String Grupo = txtGrupo1.getText();
        String Plantel = txtPlantel.getText();
        String Celular = txtCelular.getText();
        String sql = "update datos set Nombre='" + Nombre + "',Apellidos='" +Apellidos+ "',Edad='"+Edad+"',Telefono='"+Telefono+"',Email='"+Email+"',Carrera='"+Carrera+"',Matricula='"+Matricula+"',Puesto='"+Puesto+"',Grupo='"+Grupo+"',Plantel='"+Plantel+"',Celular='"+Celular+"' where Id=" + Id;
        try {
            if (Nombre != null || Apellidos != null || Edad != null || Telefono != null || Email != null || Carrera!= null || Puesto != null || Grupo != null || Plantel != null || Celular != null) {
                con = cn.getConnection();
                st = con.createStatement();
                st.executeUpdate(sql);
                JOptionPane.showMessageDialog(null, "Usuario Modificado");
                limpiarTabla(model);
                
            } else {
                JOptionPane.showMessageDialog(null, "Error...!!!");
            }

        } catch (Exception e) {
        }

    }

    void Eliminar() {
        String sql = "delete from datos where Id=" + Id;        
        int fila = TablaDatos.getSelectedRow();
        if (fila < 0) {
            JOptionPane.showMessageDialog(null,"Usuario no Seleccionado");
        } else {
                try {
                    con = cn.getConnection();
                    st = con.createStatement();
                    st.executeUpdate(sql);
                    JOptionPane.showMessageDialog(null, "Usuario Eliminado");
                    limpiarTabla(model);
                    
                } catch (Exception e) {
                }
               
        }

    }

    void nuevo() {
        txtId.setText("");
        txtNombre.setText("");
        txtApellidos.setText("");
        txtEdad.setText("");
        txtTelefono.setText("");
        txtEmail.setText("");
        txtCarrera.setText("");
        txtMatricula.setText("");
        txtPuesto.setText("");
        txtGrupo1.setText("");
        txtPlantel.setText("");
        txtCelular.setText("");
        txtNombre.requestFocus();
    }

    void limpiarTabla(DefaultTableModel model) {
        for (int i = 0; i <= TablaDatos.getRowCount(); i++) {
            model.removeRow(i);
            i = i - 1;
        }

    }
    void Actualizar(){
        limpiarTabla(model);
        listar();
    }
    

