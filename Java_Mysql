        nuevo();
    }                                            

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Eliminar();
        listar();
        nuevo();
    }                                           

    private void btnNuevoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        nuevo();
    }                                        

    private void TablaDatosMouseClicked(java.awt.event.MouseEvent evt) {                                        
        int row = TablaDatos.getSelectedRow();
        if (row == -1) {
            JOptionPane.showMessageDialog(null, "No se Selecciono");
        } else {
            Id = Integer.parseInt((String) TablaDatos.getValueAt(row, 0).toString());
            String Nombre = (String) TablaDatos.getValueAt(row, 1);
            String Apellidos = (String) TablaDatos.getValueAt(row, 2);
            String Edad = (String) TablaDatos.getValueAt(row, 3);
            String Telefono = (String) TablaDatos.getValueAt(row, 4);
            String Email = (String) TablaDatos.getValueAt(row, 5);
            String Carrera = (String) TablaDatos.getValueAt(row, 6);
            String Matricula = (String) TablaDatos.getValueAt(row, 7);
            String Puesto = (String) TablaDatos.getValueAt(row, 8);
            String Grupo = (String) TablaDatos.getValueAt(row, 9);
            String Plantel = (String) TablaDatos.getValueAt(row, 10);
            String Celular = (String) TablaDatos.getValueAt(row, 11);
            txtId.setText("" + Id);
            txtNombre.setText(Nombre);
            txtApellidos.setText(Apellidos);
            txtEdad.setText(Edad);
            txtTelefono.setText(Telefono);
            txtEmail.setText(Email);
            txtCarrera.setText(Carrera);
            txtMatricula.setText(Matricula);
            txtPuesto.setText(Puesto);
            txtGrupo1.setText(Grupo);
            txtPlantel.setText(Plantel);
            txtCelular.setText(Celular);

        }
    }                                       

